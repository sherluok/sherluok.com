{
  "extends": "../tsconfig.bundler.json",
  "include": [
    "./src/**/*",
    "./next-env.d.ts",
    "./prisma/client/**/*",
    ".next/types/**/*.ts",
  ],
  "exclude": [
    ".next",
    "node_modules"
  ],
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM"
    ],
    "jsx": "preserve",
    "paths": {
      "^/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  }
}
